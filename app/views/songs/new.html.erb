<h1>Create Song</h1>

<%= form_for @song do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %><br>

    <br><%= f.label :released %>
    <%= f.select :released, [['Released', true], ['Unreleased', false]]%><br>

    <br><%= f.label "Release Year" %>
    <%= f.text_field  :release_year %><br>

    <br><%= f.label :artist_name %>
    <%= f.text_field :artist_name %><br>

    <br><%= f.label :genre %>
    <%= f.text_field :genre %><br>

    <br><%= f.submit "Create Song" %> 
<% end %>

<%= button_to "Cancel Create a Song", songs_path, method: :get %>

<br><% if @song.errors.any? %>
    <p>Please resolve the following issues to Create your Song:</p>
    <% @song.errors.full_messages.each do |error| %>
        <ul>
            <li>
                <%= error %>
            </li>
        </ul>
    <% end %>
<% end %> 

